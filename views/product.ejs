<% include _layouts/header %>


    <h1 class="page-header"><%= p.title %></h1>
    <br>
    <div class="row">
    <div class="col-md-5">
        <img class="spi" src="/static/product_image/<%= p.id %>/<%= p.image %>" alt="">
    </div>

    <div class="col-md-offset-5">
        <p><%- p.desc %></p>
        <p>$<%= parseFloat(p.price).toFixed(2) %></p>
        <% if(loggedIn) { %>
        <p><a href="/cart/add/<%= p.slug %>">Add to Cart</a></p>
        <% } else { %>
        <p>You must be Logged to purchase items.</p>
        <% } %>
    </div>

    <div class="col-md-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image) { %>
                <% if(image != "thumbs") { %>
                <li>
                    <a href="/static/product_image/<%= p.id %>/gallery/<%= image %>" data-fancybox="gallery">
                        <img src="/static/product_image/<%= p.id %>/gallery/thumbs/<%= image %>" alt="">
                    </a>
                </li>
                <% } %>
            <% }); %>
        </ul>        
    </div>

</div>
<% include _layouts/footer %>